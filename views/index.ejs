<%- include('header'); -%>
<link rel="stylesheet" type="text/css" href="css/styles.css">
<h1>index page</h1>
    <%books.forEach((book) => {%>
        
        <div >
            <h2><%=book.name%></h2>
            <%book.images.forEach((image) => {%>
                    <img src="data:image/<%=image.contentType%>;base64,
                    <%=image.imageBase64%>" class="resize">
                <% })%><br>
            <span>Description: <%=book.desc%></span>
            <a href='/books/<%=book._id%>'>...Details</a>
        </div>
   <% })%>